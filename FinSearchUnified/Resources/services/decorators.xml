<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
            id="fin_search_unified.custom_facet_gateway"
            class="FinSearchUnified\Bundles\FindologicFacetGateway"
            decorates="shopware_storefront.custom_facet_gateway"
        >
            <argument type="service" id="fin_search_unified.custom_facet_gateway.inner" />
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware_storefront.field_helper_dbal" />
            <argument type="service" id="shopware_storefront.custom_listing_hydrator" />
        </service>
        <service
            id="fin_search_unified.product_number_search"
            class="FinSearchUnified\Bundles\ProductNumberSearch"
            decorates="shopware_search.product_number_search"
            public="false"
        >
            <argument type="service" id="fin_search_unified.product_number_search.inner" />
        </service>
    </services>
</container>