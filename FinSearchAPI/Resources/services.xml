<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fin_search_api.view_dir">%fin_search_api.plugin_dir%/Resources/views</parameter>
    </parameters>

    <services>
        <service id="fin_search_api.subscriber.frontend" class="FinSearchAPI\Subscriber\Frontend">
            <argument>%fin_search_api.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber" />
        </service>

        <service decorates="shopware_storefront.custom_facet_gateway" class="FinSearchAPI\Bundles\FindologicFacetGateway" id="FinSearchAPI.findologic_facet_gateway">
            <argument type="service" id="FinSearchAPI.findologic_facet_gateway.inner"/>
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware_storefront.field_helper_dbal" />
            <argument type="service" id="shopware_storefront.custom_listing_hydrator" />
        </service>

        <service id="fin_search_api.shopware_process" class="FinSearchAPI\ShopwareProcess">

        </service>

        <service id="fin_search_api.article_model_factory" class="FinSearchAPI\BusinessLogic\FindologicArticleFactory">

        </service>

        <service id="FinSearchAPI.color_picker_facet_result" class="FinSearchAPI\Bundles\FacetResult\ColorPickerFacetResult">

        </service>

         <service id="FinSearchAPI.product_number_search" class="FinSearchAPI\Bundles\ProductNumberSearch" decorates="shopware_search.product_number_search"
                 public="false">
            <argument type="service" id="FinSearchAPI.product_number_search.inner"/>
        </service>


        <service id="fin_search_api.commands.export_command"
                 class="FinSearchAPI\Commands\ExportCommand">
            <tag name="console.command"/>
        </service>

        <service id="shopware.api.findologic" class="FinSearchAPI\Components\Api\Resource\Findologic">

        </service>
    </services>
</container>